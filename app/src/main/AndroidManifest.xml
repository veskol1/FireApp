<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.planetmovieapp">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".AdministrationActivities.AdministrationActivity" android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" android:parentActivityName=".LoginActivity" android:label="Welcome to MoviePlanet!"/>
        <activity android:name=".AdministrationActivities.AdminLoginActivity" android:launchMode="singleTop" android:parentActivityName=".MainActivity" android:label="Administration Login"/>
<!--        <activity android:name=".AdministrationActivities.AdministrationActivity" android:launchMode="singleTop" android:parentActivityName=".AdministrationActivities.AdminLoginActivity" android:label="Administration screen"/>-->
        <activity android:name=".AdministrationActivities.AddMovieActivity" android:launchMode="singleTop" android:parentActivityName=".AdministrationActivities.AdministrationActivity" android:label="Add movie to database"/>
        <activity android:name=".Activities.DetailedMovieActivity" android:launchMode="singleTop" android:parentActivityName=".MainActivity" android:label="Movie details"/>
        <activity android:name=".Activities.SelectSeatsActivity" android:launchMode="singleTop" android:parentActivityName=".Activities.DetailedMovieActivity" android:label="Select seats"/>
        <activity android:name=".Activities.OrderDetailsActivity" android:parentActivityName=".Activities.SelectSeatsActivity"/>
        <activity android:name=".RegisterActivity" android:parentActivityName=".LoginActivity" android:label="Register new account"/>
        <activity android:name=".AdministrationActivities.AddShowTime" android:parentActivityName=".AdministrationActivities.AdministrationActivity" android:label="Add show time" />
    </application>

</manifest>