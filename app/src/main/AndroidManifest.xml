<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fireapp">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
<!--        <activity android:name=".MainActivity" android:parentActivityName=".LogInActivity" android:label="Welcome!"></activity>-->
        <activity android:name=".LogInActivity" android:parentActivityName=".MainActivity" android:label="Administration Login"></activity>
        <activity android:name=".AdministrationActivity" android:parentActivityName=".LogInActivity" android:label="Administration screen"></activity>
        <activity android:name=".AddMovieActivity" android:parentActivityName=".LogInActivity" android:label="Add movie to database"></activity>
 </application>

</manifest>