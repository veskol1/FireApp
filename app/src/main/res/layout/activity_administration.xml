<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="top"
    android:layout_marginTop="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add options:"
        android:layout_marginStart="24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:gravity="start"
        android:orientation="vertical">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_movie_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Add new movie"
            app:icon="@android:drawable/ic_menu_add" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_showtime_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Add movie showtime"
            app:icon="@android:drawable/ic_menu_add"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_hall_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Add Hall"
            app:icon="@android:drawable/ic_menu_add"/>

    </LinearLayout>



<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Remove options:"
    android:layout_marginStart="24dp"
    android:layout_marginTop="32dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="4dp"
        android:gravity="start"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/remove_movie_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove movie"
            android:layout_margin="8dp"
            app:icon="@android:drawable/ic_menu_delete" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/remove_showtime_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Remove movie Showtime"
            app:icon="@android:drawable/ic_menu_delete"/>


    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Statistics:"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="4dp"
        android:gravity="start"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/get_statistics_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Get statistics" />

    </LinearLayout>


</LinearLayout>